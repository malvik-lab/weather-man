    "keywords": ["weather", "forecast", "meteo.it"],
    "license": "MIT",
    "authors": [
        {
            "name": "Vittorio Malaspina",
            "email": "vittorio.malaspina@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.2.5 || ^8.0",
        "guzzlehttp/guzzle": "^7",
        "cocur/slugify": "^3.2",
        "imangazaliev/didom": "^1.16"
    },
    "require-dev": {
        "phpunit/phpunit": "^8"
    },
	"autoload": {
        "psr-4": {
            "MalvikLab\\WeatherMan\\": "src/"
        }
    },
    "minimum-stability": "dev"
